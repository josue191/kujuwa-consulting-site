rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permet un accès en lecture et en écriture à tous les documents
    // pour n'importe quel utilisateur authentifié. C'est une règle
    // appropriée pour une interface d'administration où tous les
    // utilisateurs sont approuvés.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
