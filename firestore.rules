rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Autoriser la lecture et l'écriture pour n'importe quel document
    // si et seulement si l'utilisateur est authentifié.
    // C'est une règle simple et sécurisée pour une interface d'administration.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
